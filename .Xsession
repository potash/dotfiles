#!/bin/sh
xrandr --output LVDS1 --mode 1360x768 --output VGA1 --off
#xrandr --output LVDS --mode 1400x1050 --output DVI-0 --off
# mouse acceleration threshold
xset m 15 8
xset s on
xset dpms on
# xterm preferences
xrdb -load $HOME/.Xresources
# key bindings
setxkbmap -option caps:super
setxkbmap -option terminate:ctrl_alt_bksp
#/usr/bin/xmodmap $HOME/.Xmodmap
#no system beep
xset b off

#thunar --daemon & wicd-gtk & gtk-redshift '-s 0' '-l 41:-87' &
#thunar --daemon & gtk-redshift '-s 0' '-l 41:-87' &
#exec ck-launch-session  dbus-launch --sh-syntax --exit-with-session /usr/bin/awesome
exec /usr/bin/awesome; logout
# console kit (required for soundcard)

