#!/bin/sh
xrandr --output LVDS1 --mode 1360x768 --output VGA1 --off

# mouse acceleration threshold
xset m 15 8
xset s on
xset dpms on

# xterm preferences
xrdb -load $HOME/.Xresources

# key bindings
setxkbmap -option caps:super
setxkbmap -option terminate:ctrl_alt_bksp

#no system beep
xset b off

exec /usr/bin/awesome; logout
