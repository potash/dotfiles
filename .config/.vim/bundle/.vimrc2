call pathogen#infect()

"tabstop and indent size
set ts=4
set sw=4

"syntax highlighting on
syn on
syntax enable


colorscheme zenburn
filetype plugin on
filetype indent on
set pastetoggle=<F2>
set gfn=DejaVu\ Sans\ Mono\ 12
set hlsearch

"#set winaltkeys=no
let g:Tex_GotoError=0
set grepprg=grep\ -nH\ $*

"let g:Tex_FormatDependency_pdf = 'dvi'
"let g:Tex_CompileRule_pdf = 'dvipdf $*.dvi'
"let g:Tex_ViewRule_pdf = 'xpdf $*.pdf'

let g:Tex_CompileRule_dvi = 'latex -src-specials -interaction=nonstopmode $*'
let g:Tex_DefaultTargetFormat = 'dvi'
"let g:Tex_ViewRule_dvi = 'xdvi -editor "gvim --servername xdvi --remote +\%l \%f" $*.dvi &'
"let g:Tex_ViewRuleComplete_dvi = 'xdvi -editor "gvim --servername xdvi --remote +\%l \%f" $* &'
let g:Tex_ViewRuleComplete_dvi = 'xdvi -s 8 -keep -editor "gvim --servername xdvi --remote +\%l \%f" $* &'
let g:tex_flavor='latex'
let g:Tex_UseEditorSettingInDVIViewer = 1

let g:Tex_IgnoredWarnings =
    \'Underfull'."\n".
    \'Overfull'."\n".
    \'specifier changed to'."\n".
    \'You have requested'."\n".
    \'Missing number, treated as zero.'."\n".
    \'There were undefined references'."\n".
    \'Latex Warning:'."\n".
    \'Citation %.%# undefined'

map! <F4> : call SaveAndRunLaTeX()<CR>

func! SaveAndRunLaTeX()
	exec "w"
	call Tex_CompileLatex()
endfunc

" VimOrganizer
au! BufRead,BufWrite,BufWritePost,BufNewFile *.org
au BufEnter *.org call org#SetOrgFileType()
let g:agenda_files = ['/home/eric/docs/todo.org']
let g:org_tags_alist='{@home(h) @school(s)} {easy(e) hard(d)} {computer(c)} {buy(b) make(m)}'
let g:org_todo_setup='TODO | DOING | DONE'
let g:org_reverse_note_order='1'
