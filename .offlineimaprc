# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# suit to get started fast.

[general]
pythonfile = ~/.offlineimap.py
accounts = k2co3
socktimeout = 120

[Account k2co3]
localrepository = Local
remoterepository = Remote
autorefresh = 1

[Repository Local]
type = Maildir
localfolders = ~/mail

[Repository Remote]
type = IMAP
remotehost = imap.zoho.com
remoteuser = eric@k2co3.net
remotepasseval = mailpasswd("k2co3")
remoteport = 993
ssl = yes
#readonly=true
#idlefolders = ['INBOX']
folderfilter = lambda foldername: foldername in ['INBOX', 'Spam']

[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

